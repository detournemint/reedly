<div id="home-page">
  <div class="container">
    <div class="jumbotron">
    <h1 class="text-center">Reedly</h1>
    <p>a simple rss reader written in backbone.js and rails</p>
    <div class="text-center btn btn-default btn-lg" data-toggle="modal" data-target="#signInModal">Sign In</div>
    <div class="text-center btn btn-default btn-lg" data-toggle="modal" data-target="#signUpModal">Sign Up</div>
    <a href="/guestsignin"><div class="text-center btn btn-default btn-lg guest-button"> Sign In As Guest</div> </a>
    </div>
  </div>
</div>




<div class="modal fade" id="signInModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign in</h4>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, :as => :user, :url => "/users/sign_in") do |f| %>
        <div><br />
        <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Enter Email" %></div>

        <div><br />
        <%= f.password_field :password, :class => "form-control", :placeholder => "Enter Password" %></div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default">Sign In</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>


<div class="modal fade" id="signUpModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign Up</h4>
      </div>
      <div class="modal-body">
        <%= form_for(User.new, :as => :user, :url => "/users") do |f| %>
        <div>
          <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Enter Email" %>
        </div>
          </br>
        <div>
          <%= f.password_field :password, :class => "form-control", :placeholder => "Enter Password" %>
        </div>
          </br>
        <div>
          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Again" %>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default">Sign Up</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>